<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="esb_picking_list_form" model="ir.ui.view">
        <field name="name">esb.picking.list.form</field>
        <field name="model">esb.picking.list</field>
        <field name="arch" type="xml">
            <form string="Picking List">
                <header>
                    <button string="Done"
                            name="action_done"
                            class="btn-primary"
                            type="object" attrs="{'invisible': [('state', '=', 'done')]}"/>
                    <button string="Draft"
                            name="action_draft"
                            type="object" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                    <field name="state" invisible="1"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group name="main">
                        <group name="main-left">
                            <field name="partner_id"/>
                            <field name="picking_ids"/>
                        </group>
                        <group name="main-right">
                            <field name="ref"/>
                        </group>
                    </group>
                    <group name="lines">
                        <field name="line_ids">
                            <tree editable="bottom">
                                <field name="sequence"/>
                                <field name="move_id" invisible="1"/>
                                <field name="product_id"/>
                                <field name="done_quantity"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="esb_picking_list_tree" model="ir.ui.view">
        <field name="name">esb.picking.list.tree</field>
        <field name="model">esb.picking.list</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="esb_picking_list_search" model="ir.ui.view">
        <field name="name">esb.picking.list.search</field>
        <field name="model">esb.picking.list</field>
        <field name="arch" type="xml">
            <search string="Journal Entry Template">
                <field name="name"/>
                <group name="groupby">
                    <filter name="partner_id" string="Partner" context="{'group_by': 'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="esb_picking_list_action" model="ir.actions.act_window">
        <field name="name">Journal Entry Templates</field>
        <field name="res_model">esb.picking.list</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="esb_picking_list_menu"
        action="esb_picking_list_action"
        parent="stock.menu_stock_warehouse_mgmt"
        sequence="300"/>

</odoo>
